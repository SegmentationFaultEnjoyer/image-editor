{
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "index.d.ts",
        "env.d.ts"
      ],
    "exclude": [
        "node_modules", 
        "sandbox",
        "**/*.cy.ts", 
        "**/*.spec.ts", 
        "**/__tests__/**/*"],
    "compilerOptions": {
        "paths": {
            "@/*": [
              "./src/*"
            ]
          },
        "esModuleInterop": true
    }
  }